%
% Create a new access program
%	\newAccessProgram{name}{output}{exception}
%	\newAccessProgram{someFunction(input1, input2)}{output equation}{SomeException}
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\newAccessProgram}[4]{
	\noindent #1:
	\begin{itemize}
		\item transition: #2
		\item output: $out :=$ #3
		\item exception: $exc :=$ #4
	\end{itemize}
}
